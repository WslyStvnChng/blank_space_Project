<form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Upload Your Image!</legend>

<br></br>
<br></br>
<br></br>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Username</label>  
  <div class="col-md-4">
  <input id="username" name="username" type="text" placeholder="Earl Stephens" class="form-control input-md" required="">
  <span class="help-block">This is where you put your Username.</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="title">Title</label>  
  <div class="col-md-4">
  <input id="title" name="title" type="text" placeholder="Name Your Image" class="form-control input-md" required="">
  <span class="help-block">Please name your image</span>  
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="link">Image Link</label>  
  <div class="col-md-5">
  <input id="link" name="link"  type="text" placeholder="" class="form-control input-md" required="">
  <span class="help-block">please place your image link here</span>  
  </div>
</div>

<!-- Multiple Radios -->
<div class="form-group">
  <label class="col-md-4 control-label" for="nsfw">Safe for Work?</label>
  <div class="col-md-4">
  <div class="radio">
    <label for="nsfw-0">
      <input type="radio" name="nsfw" id="nsfw-0" value="1" checked="checked">
      nsfw
    </label>
	</div>
  <div class="radio">
    <label for="nsfw-1">
      <input type="radio" name="nsfw" id="nsfw-1" value="0">
      safe_for_work
    </label>
	</div>
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="linkBtn">Press to Link</label>
  <div class="col-md-4">
    <button id="linkBtn" name="linkBtn" class="btn btn-danger">Link!</button>
  </div>
</div>

</fieldset>
</form>
